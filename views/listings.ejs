<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>
    <div class="container">
        <h1>Listings</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            <% listings.forEach(function(listing) { %>
                <tr>
                <td><%= listing.author %></td>
                <td><%= listing.title
                    %></td>
                    <td><%= listing.description
                        %></td>
                        <td><%= listing.price
                            %></td>
                            <td><img src="<%= listing.image %>"></td>
                            <td><%= listing.category %>
                            </td>
                                <td>
                                <a href="/listings/<%= listing.id %>/edit" class="btn btn-primary">Edit</a>
                                <a href="/listings/<%= listing.id %>/delete" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
            </tbody>
        </table>
        <a href="/listings/new" class="btn btn-success">Add New Listing</a>
    </div>
<%- include("partials/footer.ejs") %>

