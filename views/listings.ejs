<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-2">
            <div class="sticky-top">
                ssssssssssssss
            </div>
        </div>
        <div class="col-md-10">
            <% listings.forEach(function(listing){ %>
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src=<%= listing.images[0] %>></div>
                    <div class="col-md-6 mt-1">
                        <h5><%= listing.title %></h5>
                        <div class="d-flex flex-row">
                            <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                        </div>
                        <p class="text-justify text-truncate para mb-0"><%= listing.description %><br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                            <h4 class="mr-1">$<%= listing.price %></h4>
                        </div>
                        <div class="d-flex flex-column mt-4"><button class="btn btn-primary btn-sm" type="button">View Listing</button><button class="btn btn-outline-primary btn-sm mt-2" type="button">Buy Now</button></div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>

