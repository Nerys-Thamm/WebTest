<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>
<div class="jumbotron">
    <h1>Listings</h1>
</div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col col-md-3 p-2 bg-white border">
            <div class="sticky-top">
                <div class="list-group">
                    <a href="/profile" class="list-group-item list-group-item-action">Profile</a>
                    <a href="/listings" class="list-group-item list-group-item-action">Listings</a>
                    <a href="/listings/new" class="list-group-item list-group-item-action">New Listing</a>
                    <a href="/signout" class="list-group-item list-group-item-action">Sign Out</a>
                </div>
            </div>
        </div>
        <div class="col col-md-9">
            <div class="d-flex justify-content-center row">
                <div class="col-md-11">
                    <div class="row p-2 bg-white border rounded">
                        <div class="row">
                            <img class="img-fluid img-responsive rounded product-image" src=<%= listing.images[0] %> >
                        </div>
                        <div class="row">
                            <h3><%= listing.title %></h3><h4 class="mr-1">$<%= listing.price %></h4>
                            <h6><%= listing.author %></h6>
                            <div class="d-flex flex-row">
                                <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                            </div>
                            <p class="text-justify text-truncate para mb-0"><%= listing.description %><br><br></p>
                        </div>
                        <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                            <div class="d-flex flex-column mt-4"><button class="btn btn-outline-primary btn-sm mt-2" type="button">Buy Now</button></div>
                            <!--edit and delete buttons-->
                            <% if(ismine){ %>
                                <div class="d-flex flex-column mt-4"><button class="btn btn-primary btn-sm" type="button">Edit</button><button class="btn btn-danger btn-sm mt-2" type="button">Delete</button></div>
                            <% } %>
                        </div>
                        <!--comments section-->
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-8 col-lg-6">
                            <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                                <div class="card-body p-4">
                                <div class="form-outline mb-4">
                                    <input type="text" id="commentField" class="form-control" placeholder="Type comment..." />
                                    <label class="form-label" for="commentField">+ Add a comment</label>
                                </div>
                                <% comments.forEach(function(comment){ %>
                                    <div class="card mb-4">
                                        <div class="card-body">
                                        <p><%= comment.comment %> </p>
                            
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                            <p class="small mb-0 ms-2"><%= comment.user %></p>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                <% }); %>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>