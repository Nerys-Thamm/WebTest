<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>
<div class="jumbotron">
    <h1>Listings</h1>
</div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col col-md-3 p-2 bg-white border">
            <div class="sticky-top sticky-offset">
                <div class="list-group">
                    <a href="/profile" class="list-group-item list-group-item-action">Profile</a>
                    <a href="/listings" class="list-group-item list-group-item-action">Listings</a>
                    <a href="/listings/new" class="list-group-item list-group-item-action">New Listing</a>
                    <a href="/logout" class="list-group-item list-group-item-action">Sign Out</a>
                </div>
            </div>
        </div>
        <div class="col col-md-9">
            <div class="d-flex justify-content-center row">
                <div class="col-md-11">
                    <div class="row p-2 border rounded">
                        <div class="card">
                            <div class="card-title">
                                <div class="col-md-3 mt-1">
                                    <a href="/listings" class="fa fa-chevron-left"><h5>Back to Listings...</h5></a>
                                </div>
                            </div>
                            <img class="card-img-top" src=<%= listing.images[0] %> >
                            <div class="card-body">
                                <h5 class="card-title"><%= listing.title %></h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <p class="text-justify text-truncate para mb-0"><%= listing.description %><br><br></p>
                                    </li>
                                    <li class="list-group-item justify-content-end">
                                        <h5 class="card-title">$<%= listing.price %></h5>
                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button">Buy Now</button>
                                    </li>
                                </ul>
                                <div class="card-footer">
                                    <!--edit and delete buttons-->
                                    <% if(ismine){ %>
                                        <div class="d-flex flex-column mt-4"><button class="btn btn-primary btn-sm" type="button">Edit</button><button class="btn btn-danger btn-sm mt-2" type="button">Delete</button></div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>