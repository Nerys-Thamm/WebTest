<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>
<div class="jumbotron">
    <h1>Listings</h1>
</div>
<div class="container mt-5 mb-5 min-vh-100">
    <div class="row">
        <div class="col col-md-3 p-2 bg-white border">
            <div class="sticky-top sticky-offset">
                <div class="list-group">
                    <a href="/profile" class="list-group-item list-group-item-action">Profile</a>
                    <a href="/listings" class="list-group-item list-group-item-action">Listings</a>
                    <a href="/listings/new" class="list-group-item list-group-item-action">New Listing</a>
                    <a href="/logout" class="list-group-item list-group-item-action">Sign Out</a>
                </div>
            </div>
        </div>
        <div class="col col-md-9">
            <div class="d-flex justify-content-center row">
                <div class="col-md-11">
                    <div class="row p-2 border rounded">
                        <div class="container-fluid card">
                            <div class="card-title">
                                <div class="col-md-3 mt-1">
                                    <a href="/listings" class="fa fa-chevron-left"><h5>Back to Listings...</h5></a>
                                </div>
                            </div>
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <% for(var i=1; i<listing.images.length; i++){ %> 
                                    <li data-target="#carouselExampleIndicators" data-slide-to=<%= i %>></li>
                                    <% } %>
                                </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="card-img-top" src=<%= listing.images[0] %>>
                                        </div>
                                        <% for(var i=1; i<listing.images.length; i++){ %> 
                                        <div class="carousel-item">
                                            <img class="card-img-top" src=<%= listing.images[i] %>>
                                        </div>
                                        <% } %>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex flex-row">
                                            <h5 class="card-title"><%= listing.title %></h5>
                                        </div>
                                    <li class="list-group-item">
                                        <div class="d-flex flex-row">
                                            <h6 class="card-text">Seller: <%= listing.author %></h6>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <p class="text-justify text-truncate para mb-0"><%= listing.description %><br><br></p>
                                    </li>
                                    <li class="list-group-item justify-content-end">
                                        <div class="d-flex flex-row-reverse">
                                            <div class="col-md-4 my-auto">
                                                <button class="btn btn-outline-primary btn-md mt-2" type="button">Buy Now</button>
                                            </div>
                                            <div class="col-md-8 align-self-center">
                                                <h4 class="mr-1">Price: $<%= listing.price %></h4>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                                <div class="card-footer">
                                    <!--edit and delete buttons-->
                                    <% if(ismine){ %>
                                        <div class="d-flex flex-column mt-4">
                                            <a class="btn btn-primary btn-sm" href="/listings/<%= listing.id %>/edit" type="button">Edit</a>
                                            <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
                                                <button class="btn btn-danger btn-block mt-2" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>